# 表示是最顶层的 EditorConfig 配置文件
root = true

# 表示所有文件适用
[*] 
 # 设置文件字符集为 utf-8
charset = utf-8
# 缩进风格（tab | space）
indent_style = space 
indent_size = 2 # 缩进大小
# 控制换行类型(lf | cr | crlf)
end_of_line = lf 
# 去除行首的任意空白字符
trim_trailing_whitespace = true 
 # 始终在文件末尾插入一个新行
insert_final_newline = true

[*.{js,jsx,vue}]
quote_type = single 

[*.md] # 表示仅 md 文件适用以下规则
max_line_length = off
trim_trailing_whitespace = false
